package app

import (
	"fmt"
	"log"
	"net"

	"github.com/urfave/cli"
)

// Gerar vai retornar a app de linha de comando pronto para ser excutada
func Gerar() *cli.App {

	app := cli.NewApp()
	app.Name = "Aplicação de linha de comando"
	app.Usage = "Busca Ips e nomes de Servidores na internet"
	flags := []cli.Flag{
		cli.StringFlag{
			Name:  "host",
			Value: "cbbrasilia.com.br",
		},
	}

	app.Commands = []cli.Command{
		{
			Name:  "ip",
			Usage: "Buscas IPS de endereços na internet",
			Flags: flags,

			Action: buscarIps,
		},
		{
			Name:   "servidores",
			Usage:  "Busca os nomes dos servidores",
			Flags:  flags,
			Action: buscarServidores,
		},
	}

	return app

}

func buscarIps(c *cli.Context) {
	host := c.String("host")

	ips, erro := net.LookupIP(host)
	if erro != nil {
		log.Fatal(erro)

	}
	for _, ip := range ips {
		fmt.Println(ip)
	}

}

func buscarServidores(c *cli.Context) {
	host := c.String("host")

	servidores, erro := net.LookupNS(host) //name server
	if erro != nil {
		log.Fatal(erro)

	}
	for _, servidor := range servidores {
		fmt.Println(servidor)
	}
}
